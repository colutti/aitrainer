{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "main.ts",
    "src/**/*"
  ],
  // "files": [],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true
  },
  "exclude": [
    "cypress",
    "eslint.config.js",
    "babel.config.cjs",
    "jest.config.cjs",
    "dist",
    ".angular",
    "**/*.spec.ts",
    "src/test-utils"
  ]
}